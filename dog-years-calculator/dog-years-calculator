// this is a variable that represents my age
let myAge = 30;

// represents the first 2 years of a dog's life
let earlyYears = 2;

//reassignment
earlyYears = earlyYears * 10.5;

//setting the age for after the first two dog years
let laterYears = myAge - 2;

laterYears = laterYears * 4;

console.log(earlyYears);
console.log(laterYears);

//calculating my age in dog years
const myAgeInDogYears = earlyYears + laterYears;

//setting my name to all lowercase letters
let myName = "Analita".toLowerCase();

// this should print out My name is analita. I am 30 years old in human years which is 133 years old in dog years.
console.log(`My name is ${myName}. I am ${myAge} years old in human years which is ${myAgeInDogYears} years old in dog years.`);